<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EasyEnergy" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->

        <item name="colorOnPrimary">@color/grey</item>
        <item name="colorPrimary">@color/dark_grey</item>
        <item name="colorPrimaryVariant">@color/light_brown</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/amber</item>
        <item name="colorSecondaryVariant">@color/light_amber</item>
        <item name="colorOnSecondary">@color/dark_amber</item>
        <!-- Status bar color. -->

        <!-- Customize your theme here. -->
        <item name="android:statusBarColor">@color/dark_grey</item>
        <item name="android:navigationBarColor">@color/dark_grey</item>
        <item name="android:textColor">@color/light_amber</item>
        <item name="android:background">@color/darker_grey</item>
        <item name="android:windowLightStatusBar">false</item>

    </style>

    <style name="ButtonEE">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/amber</item>
        <item name="android:background">@drawable/darktheme_button_background</item>
    </style>
    <style name="Theme.EasyEnergy.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/no_color</item>
    </style>
</resources>