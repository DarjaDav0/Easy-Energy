<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EasyEnergy" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_amber</item>
        <item name="colorPrimaryVariant">@color/amber</item>
        <item name="colorOnPrimary">@color/amber</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="1">@color/amber</item>
        <item name="android:navigationBarColor">@color/amber</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/light_amber</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ButtonEE">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.EasyEnergy.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/no_color</item>
    </style>

    <style name="Theme.EasyEnergy.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.EasyEnergy.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>